                    <Image.Clip>
                        <EllipseGeometry  Center="80,60" RadiusX="60" RadiusY="60" />
                    </Image.Clip>
                </Image>

                <Grid HorizontalAlignment="Center" Name="Counts" Grid.Column="2" Width="220" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Подписчиков:" Margin="0,-5,0,0" FontSize="20" Style="{StaticResource Title}" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Подписок:" Margin="0,-5,0,0" FontSize="20"   Style="{StaticResource Title}" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Медиа:" Margin="0,-5,0,0" FontSize="20" Style="{StaticResource Title}" />
                    <TextBlock Grid.Column="1" Grid.Row="0" x:Name="Followers" Text="Fixed" FontSize="20" Style="{StaticResource Fixed}" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="1" Grid.Row="1" x:Name="Following" Text="Fixed" FontSize="20" Style="{StaticResource Fixed}" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="1" Grid.Row="2" x:Name="Media" Text="Fixed" FontSize="20" Style="{StaticResource Fixed}" Margin="10,0,0,0"/>

                </Grid>


                <Grid Name="Texts" Grid.Column="1" HorizontalAlignment="Left" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!--<TextBlock Text="Логин:" FontSize="20" Style="{StaticResource Title}" />
                    <TextBlock Grid.Row="1"  FontSize="20" Text="Имя:" Style="{StaticResource Title}" />
                    <TextBlock Grid.Row="2" Text="Биография:" FontSize="20" Style="{StaticResource Title}" />-->
                    <TextBlock Grid.Column="0" Grid.Row="0" x:Name="UserName" FontSize="20" Text="Fixed" Style="{StaticResource Fixed}" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="0" Grid.Row="1" x:Name="FullName" FontSize="20" Text="Fixed" Style="{StaticResource Fixed}" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="0" Grid.Row="2" x:Name="Bio" FontSize="20" Text="Fixed"  Style="{StaticResource Fixed}" Margin="10,0,0,0"/>

                </Grid>

            </Grid>
        </Grid>

        <mui:ModernTab Name="MainFunctionality" Layout="List" Grid.Row="1"  >
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Мой аккаунт" Source="Content/MediaPage.xaml" ></mui:Link>
                <mui:Link DisplayName="График подписок" Source="Content/GraphicPage.xaml#1"></mui:Link>
                <mui:Link DisplayName="График подписчиков" Source="Content/GraphicPage.xaml#0"></mui:Link>
                <mui:Link DisplayName="График медиа" Source="Content/GraphicPage.xaml#2"></mui:Link>
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
